<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee    
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"  
         version="3.1">
         
         
   <servlet>
    
    <servlet-name>login</servlet-name>
    <servlet-class>com.financial.LoginServlet</servlet-class>
  </servlet>
         
         <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/log</url-pattern>
  </servlet-mapping>
          
          
          
         <servlet>
         <servlet-name>financialinsert</servlet-name>
         <servlet-class>com.financial.financialinsert</servlet-class>
         </servlet>
         <servlet-mapping>
    <servlet-name>financialinsert</servlet-name>
    <url-pattern>/insert</url-pattern>
  </servlet-mapping>
         
         
        <!-- salary connection -->
                 
   <servlet>
    
    <servlet-name>salary</servlet-name>
    <servlet-class>com.financial.salaryServlet</servlet-class>
  </servlet>
  
   
         <servlet-mapping>
    <servlet-name>salary</servlet-name>
    <url-pattern>/sal</url-pattern>
  </servlet-mapping>
          
         
         <!-- financial update connection -->
         
         
         <servlet>
         <servlet-name>updatefinancial</servlet-name>
    <servlet-class>com.financial.updatefinancialServlet</servlet-class>
  </servlet>
  
   
         <servlet-mapping>
    <servlet-name>updatefinancial</servlet-name>
    <url-pattern>/update</url-pattern>
  </servlet-mapping>
         
         
         <!-- financial delete connection -->
         
          <servlet>
         <servlet-name>deletefinancial</servlet-name>
    <servlet-class>com.financial.deletefinancialServlet</servlet-class>
  </servlet>
  
   
         <servlet-mapping>
    <servlet-name>deletefinancial</servlet-name>
    <url-pattern>/delete</url-pattern>
  </servlet-mapping>
         
         
         
         
  </web-app>